{
  "name": "jsc",
  "version": "0.2.0",
  "description": "JavaScript compiler that creates executable using C++ compiler",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaxCharlington/jsc.git"
  },
  "author": "MaxCharlington",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MaxCharlington/jsc/issues"
  },
  "homepage": "https://github.com/MaxCharlington/jsc#readme",
  "type": "module",
  "bin": {
    "jsc": "scripts/jsc_proxy.sh"
  },
  "files": [
    "dist/jsc",
    "src/library/",
    "deps/helpers/"
  ],
  "scripts": {
    "preinstall": "g++-13 --version && bun --version && esbuild --version",
    "pretest_build": "cmake -B build . -DBUILD_TESTS=ON -DCMAKE_BUILD_TYPE=Debug -DCMAKE_INSTALL_PREFIX=build/install",
    "test_build": "cmake --build build/ --config Debug --parallel $(nproc)",
    "pretest": "rm -rf /tmp/jsc-build && mkdir /tmp/jsc-build && bun run test_build",
    "test": "build/tests/units/test_js && build/tests/units/test_runtime && build/tests/units/test_type_interop && bun run lint && node --test tests/integration/test_basic.js && printf '\\033[0;32mAll tests passed\\033[0m\n'",
    "lint": "eslint --ext .js,.ts .",
    "validate": "tsc; bun run lint",
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "bun build index.ts --compile --minify --outfile=dist/jsc"
  },
  "dependencies": {
    "clang-format": "^1.8.0"
  },
  "engines": {
    "node": ">=18.17.1",
    "bun": ">=1.0.2"
  },
  "os": [
    "linux"
  ],
  "devDependencies": {
    "@types/estree": "^1.0.0",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.35.0",
    "typescript": "^5.0.2",
    "acorn": "^8.8.1",
    "acorn-walk": "^8.2.0",
    "commander": "^9.4.1",
    "find-up": "^6.3.0"
  }
}
