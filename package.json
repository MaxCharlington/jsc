{
  "name": "jsc",
  "version": "0.1.0",
  "description": "JavaScript compiler that creates executable form .js file using C++ compiler",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaxCharlington/jsc.git"
  },
  "author": "MaxCharlington",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MaxCharlington/jsc/issues"
  },
  "homepage": "https://github.com/MaxCharlington/jsc#readme",
  "type": "module",
  "bin": {
    "app": "index.js"
  },
  "scripts": {
    "pretest": "rm -rf /tmp/jsc-build; mkdir /tmp/jsc-build",
    "test": "node --test tests/test_basic.js",
    "lint": "npx eslint --ext .js .",
    "preinstall": "g++-12 --version || exit 1",
    "package": "cmake -B build . -DCMAKE_INSTALL_PREFIX=build/install && cmake --build build/ --config Release --parallel 4 && cmake --install build/ --config Release && cpack --config build/CPackConfig.cmake -B build/",
    "local_install": "sudo cp -r build/install/* /usr/local/"
  },
  "dependencies": {
    "acorn": "^8.8.1",
    "acorn-walk": "^8.2.0",
    "clang-format": "^1.8.0",
    "commander": "^9.4.1",
    "pkg": "^5.8.0"
  },
  "engines": {
    "node": ">=16.19.0",
    "npm": ">=8.19.0"
  },
  "pkg": {
    "scripts": "src/**/*.js"
  },
  "os": [
    "linux"
  ],
  "devDependencies": {
    "@types/estree": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.35.0"
  }
}
